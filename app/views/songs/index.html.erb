<h1>Listing Songs</h1>

<table>
  <div>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Genre</th>
    <tr>
  </div>

  <% @songs.each do |song| %>
    <div>
      <tr>
        <td><p><%= link_to song.name, song_path(song) %></p>
        <td><p><a href="<%= artist_path(song.artist) %>"><%= song.artist.name %></a></p>
        <td><p><%= link_to song.genre.name, genre_path(song.genre)%></p>
      </tr>
    </div>
  <% end %>
</table>

<br>

<%#= link_to "New song", new_song_path %>
<%= form_tag new_song_path, method: :get do %>
  <div><%= submit_tag "New song" %></div>
<% end %>

<br>

<%= form_tag artists_path, method: :get do %>
  <div><%= submit_tag "Artist Listing" %></div>
<% end %>

<br>

<%= form_tag genres_path, method: :get do %>
  <div><%= submit_tag "Genre Listing" %></div>
<% end %>
